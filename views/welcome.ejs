<body class="index-page sidebar-collapse">
  <nav class="navbar navbar-transparent navbar-color-on-scroll fixed-top navbar-expand-lg" color-on-scroll="100" id="sectionsNav">
    <div class="container">
      <div class="navbar-translate">
        <a class="navbar-brand" href="/welcome">
					<%= user.name %> </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="sr-only">Toggle navigation</span>
          <span class="navbar-toggler-icon"></span>
          <span class="navbar-toggler-icon"></span>
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <li class="dropdown nav-item">
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
              <i class="material-icons">apps</i> Menu
            </a>
            <div class="dropdown-menu dropdown-with-icons">
              <a href="/search" class="dropdown-item">
                <i class="material-icons">search</i> 
          Buscar <%= people %> </a>
              </a>
              <a href="/support" class="dropdown-item">
								<i class="material-icons">message</i> 
								Falar com o suporte</a>
              </a>
							<a href="/edit" class="dropdown-item">
								<i class="material-icons">edit</i> 
								Editar dados pessoais</a>
              </a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="material-icons">logout</i> Sair
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="page-header header-filter" data-parallax="true" style="background-image: url('<%= picture %>')">
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand text-center">
            <h2 class="title text-center">Bem-vindo, <%= user.name %>!</h2>
            <h3 class="title text-center"><%= user.registerType %></h3>
						<form id="theImageForm" method="POST" action="/profileEdit" enctype="multipart/form-data">
							<label data-toggle="tooltip" data-placement="left" title="Clique no ícone e escolha uma nova foto do perfil. Depois clique em enviar." for="theImageField" id="theImageContainer">
								<div id="iconsProfile" style="padding-top: 30px">
									<i class="fa fa-camera iconProfile" style="font-size: 20px; padding-bottom: 2px; color: purple;"></i>
								</div>
								<input type="file" style="color: purple;" name="image" id="theImageField" value="">
							</label>
							<div> 
								<input type="submit" class="btn btn-primary" name="btn_upload_profile_pic" style="width: 40%; font-size: 0.8rem;" value="Enviar Imagem"/> 
							</div>
						</form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="main main-raised">
    <div class="container">
      <div class="section text-center">
        <h3 class="title">  <a href="/edit"  class="nav-link" title="Editar seus dados pessoais">Sua descrição
					<i class="material-icons">edit</i> 
				</a></h3>
				<h4><%= user.description %></h4>
			</div>
		</div>
	</div>
</body>
<script src="./assets/js/core/jquery.min.js" type="text/javascript"></script>
<script src="./assets/js/core/popper.min.js" type="text/javascript"></script>
